<div class="container">
  <h1>Ma liste de contacts</h1>
  <%= link_to "Ajouter un nouveau contact", new_contact_path %>

  <div id="contacts-wrapper">
    <% if current_user.contacts.empty? %>
      <h2>Ajoutez vos premiers contacts</h2>
    <% else %>

      <div id="contacts-list">
        <div class="search-form-contact" >
          <%= form_tag search_contacts_path, method: :get do %>
            <%= text_field_tag :q, nil, placeholder: 'Rechercher', class: "form-control" %>
          <% end %>
        </div>
<!--         <div class="search-form-contact" >
          <%= link_to "Ajouter un contact", new_contact_path %>
        </div> -->
        <% if @contacts.empty? %>
          <div class="contact">
            Ce contact n'existe pas encore !
          </div>
        <% else %>
          <% @contacts.each do |contact| %>
            <%= link_to contact_path(contact), class: "contact", remote:true do %>
              <div class="contact-list-name">
                <%= contact.first_name %> <%= contact.last_name %>
              </div>
              <div class="contact-list-org">
                <%= contact.organization.name %>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <div id="contacts-show">
      <div id="contact-details">
        <% @contact = @contacts.first %>
        <%= render 'contacts/show_partial' %>
      </div>
    </div>

    <% end %>
  </div>
</div>
